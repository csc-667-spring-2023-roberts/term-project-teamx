    <script src="/scripts/bundle.js" defer></script>
    <link rel="stylesheet" href="/stylesheets/home.css" />
  </head>
  <body>
    <h1>
      Lobby Page (Authenticated) - Hi <%= user.username %> (<%= user.id %>)
